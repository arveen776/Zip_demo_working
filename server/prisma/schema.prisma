datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}

model Service {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  cost        Float
  quoteItems  QuoteItem[]
}

model Customer {
   id         Int      @id @default(autoincrement())
   name       String
   email      String?
   address    String?
   phone      String?
   notes      String?
   quotes     Quote[]  @relation("CustomerQuotes")
   appointments Appointment[] @relation("CustomerAppointments")
}

model Quote {
   id           Int         @id @default(autoincrement())
   employeeName String?
   status       String      @default("Pending")
   createdAt    DateTime    @default(now())
   label        String?     // e.g. "Kitchen Remodel" or "Bathroom Repair"
   customer     Customer?   @relation("CustomerQuotes", fields: [customerId], references: [id])
   customerId   Int?
   quoteItems   QuoteItem[]
}

model QuoteItem {
  id        Int     @id @default(autoincrement())
  quote     Quote   @relation(fields: [quoteId], references: [id])
  quoteId   Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int
  qty       Int
  lineTotal Float
}

model Appointment {
  id          Int       @id @default(autoincrement())
  customer    Customer  @relation("CustomerAppointments", fields: [customerId], references: [id])
  customerId  Int
  date        DateTime
  time        String    // e.g. "09:00", "14:30"
  duration    Int       @default(60) // duration in minutes
  notes       String?
  status      String    @default("Scheduled") // Scheduled, Completed, Cancelled, No-Show
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
